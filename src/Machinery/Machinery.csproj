<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net461;netstandard1.0;netstandard2.0</TargetFrameworks>
    <AssemblyVersion>0.1</AssemblyVersion>
    <VersionPrefix>0.1.1</VersionPrefix>
    <FileVersion>$(VersionPrefix)</FileVersion>
    <Description>Minimalistic state machine.
Commonly used types:
Machinery.StateMachine&lt;TContext, TEvent&gt;
Machinery.StateMachine&lt;TContext, TEvent, TState&gt;
Machinery.StateMachine&lt;TContext, TEvent, TState, TPolicy&gt;</Description>
    <PackageTags>state;machine;state-machine;dfa</PackageTags>
    <PackageReleaseNotes>https://github.com/qbit86/machinery/blob/develop/src/Machinery/CHANGELOG.md</PackageReleaseNotes>
    <SignAssembly>true</SignAssembly>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageIcon>kopimi.png</PackageIcon>
  </PropertyGroup>
  <ItemGroup>
    <None Include="$(RepoRoot)/assets/kopimi.png" Pack="true" PackagePath=""/>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.6" PrivateAssets="all" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0-beta2-19367-01" PrivateAssets="all" />
  </ItemGroup>
</Project>
