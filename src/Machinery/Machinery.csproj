<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AnalysisLevel>latest</AnalysisLevel>
    <AnalysisMode>AllEnabledByDefault</AnalysisMode>
    <AssemblyVersion>0.4</AssemblyVersion>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <FileVersion>0.4.0</FileVersion>
    <TargetFrameworks>net461;netstandard1.0;netstandard2.0</TargetFrameworks>
  </PropertyGroup>
  <PropertyGroup>
    <Description>Minimalistic state machine.
Commonly used types:
Machinery.IState&lt;TContext, TEvent&gt;
Machinery.StateMachine&lt;TContext, TEvent&gt;
Machinery.StateMachine&lt;TContext, TEvent, TState, TPolicy&gt;</Description>
    <PackageReleaseNotes>https://github.com/qbit86/machinery/blob/develop/src/Machinery/CHANGELOG.md</PackageReleaseNotes>
    <PackageTags>state;machine;state-machine;dfa</PackageTags>
    <VersionPrefix>$(FileVersion)</VersionPrefix>
  </PropertyGroup>
  <PropertyGroup Condition="'$(DebugType)' == 'portable'">
    <EmbedAllSources>true</EmbedAllSources>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="all" />
  </ItemGroup>
</Project>
